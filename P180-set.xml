    <key n="100">
        <name>d</name>
        <desc>Toggle door</desc>
        <binding>
            <command>nasal</command>
            <script>doors.crew.toggle();</script>
        </binding>
        <binding>
            <command>property-toggle</command>
            <property>/sim/sound/switch</property>
        </binding> 
    </key>

    <key n="68">
        <name>D</name>
        <desc>Toggle Cargo door</desc>
        <binding>
            <command>nasal</command>
            <script>doors.cargo.toggle();</script>
        </binding>
        <binding>
            <command>property-toggle</command>
            <property>/sim/sound/switch</property>
        </binding> 
    </key>
        
    <key n="108">
