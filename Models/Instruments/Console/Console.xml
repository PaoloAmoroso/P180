  <!-- Radar -->
  <model>
    <name>Radar_A</name>
    <path>radar/nd.xml</path>
    <offsets>
      <x-m>  0.122720 </x-m>
      <y-m>  0.096872 </y-m>
      <z-m> -0.100760 </z-m>
      <pitch-deg> -25.6 </pitch-deg>
    </offsets>
  </model>

  <animation>
    <type>material</type>
    <object-name>Radar_A</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <!-- MAP Activation (Turn On/Off) -->
    <animation>
    <type>select</type>
    <object-name>AI</object-name>
    <object-name>canvasCadre</object-name>
    <object-name>Radar_A</object-name>
    <object-name>Radar_G</object-name>
    <condition>
      <property>sim/model/show-map</property>
    </condition>
  </animation>

    <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>ButtonA</object-name>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/show-map</property>
      </binding>
    </action>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>ButtonA</object-name>
    <interpolation>
      <entry><ind> 1 </ind><dep> -0.002 </dep></entry>
      <entry><ind> 2 </ind><dep>  0.000 </dep></entry>
      <entry><ind> 3 </ind><dep>  0.000 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
   
</PropertyList>
